{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@app/*": ["application/*"],
      "@infra/*": ["infrastructure/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
